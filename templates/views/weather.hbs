<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    {{>navbar}}
    <div class="container-fluid main_header">
         <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter the City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="y"></p>
                        <p id="today_date"></p>

                    </div>
                    <div class="main_layer ">
                        <p id="city_name">GET OUTPUT HERE</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val"></span> K</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                 
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const getCurrentDay=()=>{
        let weekday=new Array(7);
        weekday[0]="Sunday";
        weekday[1]="Monday";
        weekday[2]="Tuesday";
        weekday[3]="Wednesday";
        weekday[4]="Thursday";
        weekday[5]="Friday";
        weekday[6]="Saturday";
        let currentTime=new Date();
        days=weekday[currentTime.getDay()];
        let day=document.getElementById('y');
        day.innerText=days;
        };
        getCurrentDay();
        let currentTime=new Date();
        console.log(currentTime.getDay());
        document.getElementById('today_date').innerText=`${currentTime.getDate()}/${currentTime.getMonth()+1}/${currentTime.getFullYear()}`;
    </script>
</body>
</html>